<?xml version="1.0" encoding="utf-8" ?>
<j:jelly trim="false" xmlns:j="jelly:core" xmlns:g="glide" xmlns:j2="null" xmlns:g2="null">

<g:evaluate jelly="true">
	var department = RP.getParameterValue( 'department' ),
		departmentDisplayMap = {
			'it' : 'IT',
			'facilities' : 'Facilities',
			'finance' : 'Finance',
			'hr' : 'Human Resources',
			'legal' : 'Legal',
			'marketing' : 'Marketing'
		};
</g:evaluate>
<j:if test="${department != ''}">
	<script>var brandedGethelpDepartment = '${department}';</script>
</j:if>

<div class="branded-gethelp-selection-container">
	<label class="branded-gethelp-label">Select Department:</label>

	<div class="btn-group">
		<j:if test="${department != ''}">
			<button class="branded-gethelp-dropdown-button btn btn-default btn-lg dropdown-toggle" type="button" data-toggle="dropdown" data-active="${department}" aria-expanded="false">
				<span class="branded-gethelp-dropdown-button-text">${departmentDisplayMap[ department ]}</span> <span class="caret"></span>
			</button>
		</j:if>
		<j:if test="${department == ''}">
			<button class="branded-gethelp-dropdown-button btn btn-default btn-lg dropdown-toggle" type="button" data-toggle="dropdown" data-active="it" aria-expanded="false">
				<span class="branded-gethelp-dropdown-button-text">IT</span> <span class="caret"></span>
			</button>
		</j:if>

		<ul class="branded-gethelp-dropdown dropdown-menu" role="menu">
			<li class="branded-gethelp-dropdown-item"><a class="branded-gethelp-dropdown-link" href="javascript:void(0);" data-department="it">IT</a></li>
			<li class="branded-gethelp-dropdown-item"><a class="branded-gethelp-dropdown-link" href="javascript:void(0);" data-department="facilities">Facilities</a></li>
			<li class="branded-gethelp-dropdown-item"><a class="branded-gethelp-dropdown-link" href="javascript:void(0);" data-department="finance">Finance</a></li>
			<li class="branded-gethelp-dropdown-item"><a class="branded-gethelp-dropdown-link" href="javascript:void(0);" data-department="hr">Human Resources</a></li>
			<li class="branded-gethelp-dropdown-item"><a class="branded-gethelp-dropdown-link" href="javascript:void(0);" data-department="legal">Legal</a></li>
			<li class="branded-gethelp-dropdown-item"><a class="branded-gethelp-dropdown-link" href="javascript:void(0);" data-department="marketing">Marketing</a></li>
		</ul>
	</div>
</div>

</j:jelly>
