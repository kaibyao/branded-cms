<?xml version="1.0" encoding="utf-8" ?>
<j:jelly trim="false" xmlns:j="jelly:core" xmlns:g="glide" xmlns:j2="null" xmlns:g2="null">

<g:evaluate jelly="true">
	var catalog = RP.getParameterValue( 'catalog' ),
		catalogDisplayMap = {
			'it' : 'IT',
			'facilities' : 'Facilities',
			'finance' : 'Finance',
			'hr' : 'Human Resources',
			'legal' : 'Legal',
			'marketing' : 'Marketing'
		};
</g:evaluate>
<j:if test="${catalog != ''}">
	<script>var brandedCatalog = '${catalog}';</script>
</j:if>

<div class="branded-catalog-selection-container">
	<label class="branded-catalog-label">Select Catalog:</label>

	<div class="btn-group">
		<j:if test="${catalog != ''}">
			<button class="branded-catalog-dropdown-button btn btn-default btn-lg dropdown-toggle" type="button" data-toggle="dropdown" data-active="${catalog}" aria-expanded="false">
				<span class="branded-catalog-dropdown-button-text">${catalogDisplayMap[ catalog ]}</span> <span class="caret"></span>
			</button>
		</j:if>
		<j:if test="${catalog == ''}">
			<button class="branded-catalog-dropdown-button btn btn-default btn-lg dropdown-toggle" type="button" data-toggle="dropdown" data-active="it" aria-expanded="false">
				<span class="branded-catalog-dropdown-button-text">IT</span> <span class="caret"></span>
			</button>
		</j:if>

		<ul class="branded-catalog-dropdown dropdown-menu" role="menu">
			<li class="branded-catalog-dropdown-item"><a class="branded-catalog-dropdown-link" href="javascript:void(0);" data-catalog="it">IT</a></li>
			<li class="branded-catalog-dropdown-item"><a class="branded-catalog-dropdown-link" href="javascript:void(0);" data-catalog="facilities">Facilities</a></li>
			<li class="branded-catalog-dropdown-item"><a class="branded-catalog-dropdown-link" href="javascript:void(0);" data-catalog="finance">Finance</a></li>
			<li class="branded-catalog-dropdown-item"><a class="branded-catalog-dropdown-link" href="javascript:void(0);" data-catalog="hr">Human Resources</a></li>
			<li class="branded-catalog-dropdown-item"><a class="branded-catalog-dropdown-link" href="javascript:void(0);" data-catalog="legal">Legal</a></li>
			<li class="branded-catalog-dropdown-item"><a class="branded-catalog-dropdown-link" href="javascript:void(0);" data-catalog="marketing">Marketing</a></li>
		</ul>
	</div>
</div>

</j:jelly>
