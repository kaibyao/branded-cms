<?xml version="1.0" encoding="utf-8" ?>
<j:jelly trim="false" xmlns:j="jelly:core" xmlns:g="glide" xmlns:j2="null" xmlns:g2="null">

<form class="typeahead-search input-group">
	<input type="text" id="typeahead-search-text" class="typeahead-search-text form-control" value="" placeholder="Search for an article" />
	<input type="submit" id="typeahead-search-submit" class="typeahead-search-submit" value="submit" />
</form><!-- /input-group -->

<div class="branded-knowledge-container row">
	<div class="branded-knowledge-filters col-md-3">
		<div class="branded-knowledge-knowledgebase-filters">
			<h3 class="branded-knowledge-knowledgebase-filters-title branded-knowledge-filters-title">Knowledge Bases</h3>
			<ul class="js-branded-knowledge-knowledgebase-filters-list branded-knowledge-filters-list">
			</ul>
		</div>

		<div class="branded-knowledge-topic-filters">
			<h3 class="branded-knowledge-topic-filters-title branded-knowledge-filters-title">Topics</h3>
			<ul class="js-branded-knowledge-topic-filters-list branded-knowledge-filters-list">
			</ul>
		</div>
	</div>

	<div class="branded-knowledge-main col-md-6">
		<h3 class="branded-knowledge-main-title branded-knowledge-filters-title">Articles</h3>
	</div>

	<div class="branded-knowledge-feed col-md-3">
		<div class="branded-knowledge-featured">
			<h3 class="branded-knowledge-featured-title branded-knowledge-feed-title">Featured Articles</h3>
			<ul class="branded-knowledge-featured-list branded-knowledge-feed-list"></ul>
		</div>
		<div class="branded-knowledge-helpful">
			<h3 class="branded-knowledge-helpful-title branded-knowledge-feed-title">Helpful Articles</h3>
			<ul class="branded-knowledge-helpful-list branded-knowledge-feed-list"></ul>
		</div>
	</div>
</div>

<div class="branded-knowledge-modal modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">${AMP}times;</span></button>
				<h4 class="modal-title">
					<span class="modal-title-text"></span>
					<span class="modal-title-rating"></span>
				</h4>
			</div>
			<div class="modal-body"></div>
			<div class="modal-footer">
				<div class="branded-knowledge-modal-makecomment">
					<textarea class="branded-knowledge-modal-makecomment-box form-control" rows="3"></textarea>
					<button class="branded-knowledge-modal-makecomment-post btn btn-primary" disabled="disabled">Post Comment</button>
				</div>
				<h4 class="branded-knowledge-modal-comments-title">Comments</h4>
				<div class="branded-knowledge-modal-comments"></div>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->

</j:jelly>